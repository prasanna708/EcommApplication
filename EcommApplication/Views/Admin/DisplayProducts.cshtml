@model IEnumerable<EcommApplication.Models.Product>

@{
    ViewBag.Title = "DisplayProducts";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}

<style>
    .products {
        display: grid;
        grid-template-columns: repeat(4,auto);
        color: black;
    }

    .product {
        border: 2px solid;
        background-color: aqua;
        padding: 20px;
        margin: 20px;
        border-radius: 20px;
    }

        .products :hover {
            transform: scale(1.05);
            box-shadow: 0 0 3px black;
        }
</style>

<h2 align="center" class="text-bg-secondary">All Products Details</h2>
<div style="text-align:right">
    <button class="btn btn-dark">
        <i class='bi bi-plus-circle-fill'></i>
        @Html.ActionLink("Add new Product", "AddProduct", null, new { @class = "btn btn-dark" })
    </button>
</div>
