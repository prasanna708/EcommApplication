@model EcommApplication.Models.AdminLogin

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AdminLogin</title>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <style>
        body {
            background-image: url('../../images/adminlogin.jpg');
            background-size: cover;
        }
    </style>
</head>
<body>
    <div>
        <h2 class="text-bg-primary" align="center">Admin Login Form</h2>
        @using (Html.BeginForm("AdminLogin", "Admin"))
        {
            <table cellpadding="8" align="center">
                <tr>
                    <td>@Html.DisplayNameFor(a => a.UserId)</td>
                    <td>
                        @Html.TextBoxFor(a => a.UserId, new { @class = "form-control", placeholder = "Enter User Id" })
                        <font color="red">@Html.ValidationMessageFor(a => a.UserId)</font>
                    </td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(a => a.Password)</td>
                    <td>
                        @Html.PasswordFor(a => a.Password, new { @class = "form-control", placeholder = "Enter Password" })
                        <font color="red">@Html.ValidationMessageFor(a => a.Password)</font>
                    </td>
                </tr>
                <tr>
                    <td align="center" colspan="2">
                        <input type="submit" value="Login" class="btn btn-primary" />
                    </td>
                </tr>
                <tr>
                    <td colspan="2" align="center">
                        @if (TempData["success"] != null)
                        {
                            <font color="red">
                                @TempData["success"]
                            </font>
                        }
                    </td>
                </tr>
            </table>
        }
    </div>
    <div class="container">
        <button class="btn btn-secondary">
            <i class="bi bi-skip-backward-fill"></i>
            @Html.ActionLink("Back to Home Page", "HomePage","Admin" , new { @class = "btn btn-secondary" })
        </button>
    </div>
</body>
</html>
