<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
    <style>
        body {
            background-image: url('../../images/User.jpg');
            background-size: cover;
            font-family : Arial;
        }
    </style>
</head>
<body class="fs-5 fw-semibold mb-3">
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
            @Html.ActionLink("User", "UserHomePage", "Users", new { area = "Admin" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("View All Products", "DisplayAllProducts", "Users", new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("View Cart", "ViewCart", "Users", new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("View Orders Placed", "ViewOrders", "Users", new { @class = "nav-link" })</li>
                    <li class="mb-3 ms-3">@Html.ActionLink("Edit Profile", "EditUserProfile", "Users", new { id = Session["uid"] }, new { @class = "nav-link link-underline" })</li>
                    <li>@Html.ActionLink("Logout", "Login", "Admin", null, new { @class = "nav-link" })</li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        @Html.Partial("_Notification")
        <hr />
        <footer>
            <p align="center">&copy; @DateTime.Now.Year All Rigths Reserved.</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
