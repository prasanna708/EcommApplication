@model IEnumerable<EcommApplication.Models.Product>

@{
    ViewBag.Title = "DisplayAllProducts";
    Layout = "~/Views/Shared/_UsersLayoutPage.cshtml";
}

<style>
    .products {
        display: grid;
        grid-template-columns: repeat(4,auto);
        color: black;
    }

    .product {
        border: 2px solid;
        background-color: antiquewhite;
        padding: 20px;
        margin: 20px;
        border-radius: 20px;
    }

    .products :hover {
        transform: scale(1.05);
        box-shadow: 0 0 3px black;
    }
</style>

<h2 align="center" class="text-bg-secondary">All Products Details</h2>

